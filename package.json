  },
  "dependencies": {
    "three": "^0.179.1"
  },
  "description": "A toy molecular dynamics simulator in the browser.",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.0",
    "@types/three": "^0.179.0",
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^9.34.0",
    "nodemon": "^3.1.10",
    "puppeteer": "^24.17.0",
    "serve": "^14.2.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.2.4"
  },
  "homepage": "https://github.com/tslmy/md.js#readme",
  "license": "ISC",
  "name": "md.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tslmy/md.js.git"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf built/*",
    "cov:open": "open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html || true",
    "dev": "nodemon --watch src --ext ts,js --exec \"npm run build && npx serve -l 8000 .\"",
    "start": "npm run build && npx serve -l 8000 .",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "watch": "tsc --watch"
  },
  "type": "module",
  "version": "1.0.0"
}
