{
  "bugs": {
    "url": "https://github.com/tslmy/md.js/issues"
  },
  "dependencies": {
    "three": "^0.144.0"
  },
  "description": "A toy molecular dynamics simulator in the browser.",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.0",
    "@types/three": "^0.179.0",
    "c8": "^9.1.0",
    "eslint": "^9.34.0",
    "nodemon": "^3.1.10",
    "puppeteer": "^24.17.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "homepage": "https://github.com/tslmy/md.js#readme",
  "license": "ISC",
  "name": "md.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tslmy/md.js.git"
  },
  "scripts": {
    "build": "tsc",
    "centers-neg-test": "node scripts/testCenteredSunNegative.mjs",
    "centerstest": "node scripts/testCenteredSun.mjs",
    "clean": "rm -rf built/*",
    "coretest": "npm run build && node scripts/testCore.mjs",
    "cov:open": "open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html || true",
    "energy": "npm run build && node scripts/testEnergyDrift.mjs",
    "engine-config": "npm run build && node scripts/testEngineConfig.mjs",
    "engine-diagnostics": "npm run build && node scripts/testEngineDiagnostics.mjs",
    "engine-persist": "npm run build && node scripts/testEnginePersist.mjs",
    "force-sym": "npm run build && node scripts/testForceSymmetry.mjs",
    "forcestest": "npm run build && node scripts/testForces.mjs",
    "pairs": "npm run build && node scripts/testPairs.mjs",
    "persist": "npm run build && node scripts/testPersistence.mjs",
    "smoke": "node scripts/smoke.mjs",
    "start": "npm run build && python -m http.server --directory .",
    "test": "node scripts/runAllTests.mjs",
    "test:cov": "npm run build && c8 --exclude 'scripts/**' --reporter=text --reporter=lcov node scripts/runAllTests.mjs",
    "typecheck": "tsc --noEmit",
    "watch": "tsc --watch"
  },
  "type": "module",
  "version": "1.0.0"
}
